<div class="d-flex justify-content-between">
	<h1 class="mt-4">Update Customer</h1>
</div>

<div class="row mt-5">
	<div class="col-md-6 m-auto">
		<div class="card card-body">
			<h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Update</h1>
			<%- include ("./partials/messages.ejs") %>
			<form action="/customer/updateCustomer/<%= user.id %> " method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input
						type="name"
						id="name"
						name="name"
						class="form-control"
						value="<%= user.name %>"
					/>
				</div>
				<div class="form-group">
					<label for="adddress">Address</label>
					<input
						type="adddress"
						id="adddress"
						name="adddress"
						class="form-control"
						value="<%= user.address%>"
					/>
				</div>
				<div class="form-group">
					<label for="age">Age</label>
					<input
						type="age"
						id="age"
						name="age"
						class="form-control"
						value="<%= user.age%>"
					/>
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input
						type="text"
						id="password"
						name="password"
						class="form-control"
						value="<%= user.password%>"
					/>
				</div>
				<button type="submit" class="btn btn-primary btn-block">
					Update
				</button>
			</form>
		</div>
	</div>
</div>
