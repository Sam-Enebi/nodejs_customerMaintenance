<div class="d-flex justify-content-between">
	<h1 class="mt-4">Modify Customers</h1>
</div>

<p class="lead mb-3">All Customers</p>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
		<% if (customers.length > 0) { %> <% customers.forEach(user => { %>
		<tr>
			<td><%= user.name %></td>
		 <td>
				<a
					href="/page/updateCustomer/<%= user._id %> "
					class="btn btn-secondary btn-sm"
				>
					Edit
				</a>
			</td>
		</tr>
		<% }) %> <% } %>
	</tbody>
</table>
